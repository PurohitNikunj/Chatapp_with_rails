<% if @all_messages %>
        <div id="message-container">
            <%= render @all_messages %>
        </div>
<% end %>

<%= form_with(model:@message, url: new_message_path) do |f| %>

        <%= f.label :Body %>
        <%= f.text_field :body %>
        <%= f.submit "send" %>

<% end %>

<%= link_to "Log-out",logout_path, data: { turbo_method: :delete } %>
