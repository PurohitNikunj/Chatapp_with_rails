<div class="card">
    <% if @all_messages %>
            <div id="message-container">
            <%= render @all_messages %>
            </div>
    <% end %>

    <%= form_with(model:@message, url: new_message_path) do |f| %>
        <% if @message.errors.any? %>
            <% @message.errors.each do |e| %>
                <%= e.full_message %>
            <% end %>
        <% end %>
            <%= f.label :Body %>
            <%= f.text_field :body %>
            <%= f.hidden_field :chat_room_id, value:params[:room_id], id:'chat_room_id' %>
            <%= f.submit "send" %>

    <% end %>
</div>

<%= link_to "Log-out",logout_path, data: { turbo_method: :delete } %>
